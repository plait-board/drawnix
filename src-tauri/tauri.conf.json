{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "drawnix",
  "version": "0.0.2",
  "identifier": "com.drawnix",
  "build": {
    "frontendDist": "../dist/apps/web",
    "devUrl": "http://localhost:7200",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "drawnix",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
